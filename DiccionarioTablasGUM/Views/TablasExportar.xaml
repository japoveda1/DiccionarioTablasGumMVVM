<Window x:Class="DiccionarioTablasGUM.Views.TablasExportar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiccionarioTablasGUM.Views"
        mc:Ignorable="d"
        Title="TablasExportar" Height="450" Width="800">
    <Grid>
        
        <Grid.RowDefinitions >
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button MaxWidth="100" Content="exportar" Margin="8"/>

        <DataGrid Grid.Row="1" ItemsSource="{Binding pubListaTablasExportar}">
            <DataGrid.Columns>
                <DataGridTemplateColumn  >
                    <DataGridTemplateColumn.CellTemplate  >
                        <DataTemplate >
                            <CheckBox  x:Name="chkSeleccion"  IsChecked="{Binding seleccion, UpdateSourceTrigger=PropertyChanged}"  />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Nombre Tabla" Binding="{Binding nombreTabla}" Width="*" />
            </DataGrid.Columns>
            
        </DataGrid>


    </Grid>
</Window>
